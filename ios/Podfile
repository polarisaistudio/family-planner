# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Define Firebase SDK version for firebase_core and firebase_messaging
$FirebaseSDKVersion = '11.5.0'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

# Fix GeneratedPluginRegistrant.m to remove Firebase plugins
system("cd #{__dir__} && ./fix_ios_plugins.sh")

def should_exclude_plugin?(plugin_name)
  # Exclude Firebase plugins - we use REST API on iOS
  # But allow firebase_messaging since it requires native SDK
  firebase_plugins = ['firebase_auth', 'cloud_firestore']
  firebase_plugins.include?(plugin_name)
end

# Custom function to install Flutter iOS pods excluding Firebase
def flutter_install_ios_pods_without_firebase(ios_application_path = nil)
  # Read the .flutter-plugins-dependencies file
  plugin_dependencies_file = File.expand_path(File.join('..', '.flutter-plugins-dependencies'), ios_application_path)

  return unless File.exist?(plugin_dependencies_file)

  # Parse the JSON file
  require 'json'
  plugin_dependencies = JSON.parse(File.read(plugin_dependencies_file))

  # Get iOS plugins
  ios_plugins = plugin_dependencies['plugins']['ios'] || []

  ios_plugins.each do |plugin|
    plugin_name = plugin['name']

    # Skip Firebase plugins (except core and messaging)
    if should_exclude_plugin?(plugin_name)
      puts "‚è≠Ô∏è  Skipping Firebase plugin: #{plugin_name} (using REST API instead)"
      next
    end

    # Install other plugins normally
    plugin_path = File.expand_path(plugin['path'])

    # Some plugins use 'darwin' folder instead of 'ios'
    ios_path = File.join(plugin_path, 'ios')
    darwin_path = File.join(plugin_path, 'darwin')

    if File.exist?(File.join(darwin_path, "#{plugin_name}.podspec"))
      pod plugin_name, :path => darwin_path
    elsif File.exist?(File.join(ios_path, "#{plugin_name}.podspec"))
      pod plugin_name, :path => ios_path
    else
      puts "‚ö†Ô∏è  Warning: Could not find podspec for #{plugin_name}"
    end
  end
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  puts "üì± iOS build - using Firebase REST API (excluding Firebase SDK pods)"
  flutter_install_ios_pods_without_firebase File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end

  puts "‚úÖ iOS build configured successfully without gRPC dependencies"
end
